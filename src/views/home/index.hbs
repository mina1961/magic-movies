{{#if isSearch}}
<section id="search">
    <h1>Search</h1>
    <form method="get" class="form">
        <input type="text" class="search" name="search" placeholder="Title...">
        <input type="text" name="genre" class="genre" placeholder="Genre...">
        <input type="number" name="year" class="year" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>
{{/if}}



<section id="catalog">
    <h1>All Movies</h1>
    <div class="band">

        <!-- If there are posts for creature in the database display each of them -->

        {{#each movies}}
        {{>movie}}
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no movies yet...</p>
        </div>
        {{/each}}


    </div>
</section>